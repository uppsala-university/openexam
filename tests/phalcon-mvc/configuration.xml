<phpunit bootstrap="./bootstrap.php"
         backupGlobals="false"
         backupStaticAttributes="true"
         verbose="true"
         colors="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="true"
         strict="true">
    <testsuite name="Phalcon MVC - Testsuite">
        <directory>./</directory>
    </testsuite>
    <filter>
        <blacklist>
            <directory>./../../vendor</directory>
            <directory>./../../phalcon-mvc/app/config</directory>
        </blacklist>
        <!--        <whitelist>
              <directory>../../phalcon-mvc/app/library</directory>
              <directory>../../phalcon-mvc/app/models</directory>
              <directory>../../phalcon-mvc/app/plugins</directory>
        </whitelist>-->
    </filter>
</phpunit>
