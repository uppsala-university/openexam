<script>
        function toggle_show_password(name) {
            var elem = document.getElementById(name);
            if (elem.attributes['type'].value === 'text') {
                elem.attributes['type'].value = 'password';
            } else {
                elem.attributes['type'].value = 'text';
            }
        }
</script>
